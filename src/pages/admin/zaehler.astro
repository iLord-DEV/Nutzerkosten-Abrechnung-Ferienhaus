---
import ProtectedLayout from '../../layouts/ProtectedLayout.astro';
import { requireAdmin } from '../../utils/auth';

// Admin-Berechtigung pr√ºfen
try {
  await requireAdmin(Astro);
} catch (error) {
  return Astro.redirect('/login');
}
---

<ProtectedLayout title="Z√§hlerverwaltung - Admin">
  <div class="section-container">
    <div class="page-header">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="page-title">
            Z√§hlerverwaltung
          </h1>
          <p class="page-description">
            Verwalten Sie die √ñlz√§hler und deren Wechsel
          </p>
        </div>
        <button 
          id="neuer-zaehler-btn"
          class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium"
        >
          ‚ûï Neuer Z√§hler
        </button>
      </div>
    </div>

    <!-- Z√§hler-Liste -->
    <div class="card-container">
      <h3 class="text-lg leading-6 font-medium text-base-content mb-2">
        Alle Z√§hler
      </h3>
      <p class="text-sm text-base-content mb-4" style="opacity: 0.6">
        Das Ausbaudatum wird automatisch auf das Einbaudatum des folgenden Z√§hlers gesetzt.
      </p>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-base-300">
            <thead class="bg-base-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-base-content uppercase tracking-wider" style="opacity: 0.7">
                  Status
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-base-content uppercase tracking-wider" style="opacity: 0.7">
                  Z√§hler-ID
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-base-content uppercase tracking-wider" style="opacity: 0.7">
                  Einbau
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-base-content uppercase tracking-wider" style="opacity: 0.7">
                  Ausbau
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-base-content uppercase tracking-wider" style="opacity: 0.7">
                  Letzter Stand
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-base-content uppercase tracking-wider" style="opacity: 0.7">
                  Tankf√ºllungen
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-base-content uppercase tracking-wider" style="opacity: 0.7">
                  Aktionen
                </th>
              </tr>
            </thead>
            <tbody id="zaehler-tabelle" class="bg-base-100 divide-y divide-base-300">
              <!-- Wird dynamisch geladen -->
            </tbody>
          </table>
        </div>
    </div>
  </div>

  <!-- Modal f√ºr neuen Z√§hler -->
  <div id="zaehler-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md card-container">
      <div class="mt-3">
        <h3 class="text-lg font-medium text-base-content mb-4">
          Neuer Z√§hler einbauen
        </h3>
        <form id="zaehler-form">
          <div class="mb-4">
            <label for="einbauDatum" class="block text-sm font-medium text-base-content mb-2">
              Einbaudatum *
            </label>
            <input
              type="date"
              id="einbauDatum"
              name="einbauDatum"
              required
              class="input w-full rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
            >
          </div>

          <div class="mb-4" id="letzter-stand-container" style="display: none;">
            <label for="letzterStandAlterZaehler" class="block text-sm font-medium text-base-content mb-2">
              Ausbaustand des alten Z√§hlers *
            </label>
            <input
              type="number"
              id="letzterStandAlterZaehler"
              name="letzterStandAlterZaehler"
              step="0.1"
              class="input w-full rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              placeholder="z.B. 100.0"
            >
            <p class="mt-1 text-xs text-base-content" style="opacity: 0.6">
              Der alte Z√§hler wird automatisch deaktiviert. Das Ausbaudatum wird auf das Einbaudatum des neuen Z√§hlers gesetzt.
            </p>
          </div>

          <div class="mb-4">
            <label for="notizen" class="block text-sm font-medium text-base-content mb-2">
              Notizen (optional)
            </label>
            <textarea
              id="notizen"
              name="notizen"
              rows="3"
              class="textarea w-full rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              placeholder="Grund f√ºr den Wechsel, Wartung, etc."
            ></textarea>
          </div>

          <div class="flex justify-end space-x-3">
            <button
              type="button"
              id="modal-cancel"
              class="px-4 py-2 text-sm font-medium bg-gray-300 hover:bg-gray-400 text-gray-700 rounded-md"
            >
              Abbrechen
            </button>
            <button
              type="submit"
              class="px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md"
            >
              Z√§hler einbauen
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal f√ºr Z√§hler-Details -->
  <div id="zaehler-details-modal" class="hidden">
    <!-- Wird dynamisch gef√ºllt -->
  </div>
</ProtectedLayout>

<script>
  let zaehler = [];
  let aktiverZaehler = null;

  // Z√§hler laden
  async function loadZaehler() {
    try {
      const response = await fetch('/api/zaehler');
      if (response.ok) {
        zaehler = await response.json();
        aktiverZaehler = zaehler.find(z => z.istAktiv);
        renderZaehlerTabelle();
      } else {
        console.error('Fehler beim Laden der Z√§hler');
      }
    } catch (error) {
      console.error('Fehler beim Laden der Z√§hler:', error);
    }
  }

  // Z√§hler-Tabelle rendern
  function renderZaehlerTabelle() {
    const tbody = document.getElementById('zaehler-tabelle');
    if (!tbody) return;

    tbody.innerHTML = '';

    zaehler.forEach(zaehler => {
      const row = document.createElement('tr');

      const statusBadge = zaehler.istAktiv
        ? '<span class="badge badge-success">Aktiv</span>'
        : '<span class="badge badge-ghost">Inaktiv</span>';

      const ausbauDatum = zaehler.ausbauDatum
        ? new Date(zaehler.ausbauDatum).toLocaleDateString('de-DE')
        : '-';

      // Letzter Stand - unterschiedlich f√ºr aktive/inaktive Z√§hler
      let letzterStandHtml;
      if (zaehler.istAktiv) {
        // Aktiv: Nur letzter Aufenthalt-Stand
        letzterStandHtml = `${zaehler.letzterAufenthaltStand.toFixed(1)} h`;
      } else {
        // Inaktiv: Beide Werte anzeigen
        letzterStandHtml = `
          <div class="text-sm">
            <div>Letzter Aufenthalt: ${zaehler.letzterAufenthaltStand.toFixed(1)} h</div>
            <div class="text-base-content" style="opacity: 0.6">Ausbau: ${zaehler.letzterStand.toFixed(1)} h</div>
          </div>
        `;
      }

      row.innerHTML = `
        <td class="px-6 py-4 whitespace-nowrap">
          ${statusBadge}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-base-content">
          #${zaehler.id}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-base-content">
          ${new Date(zaehler.einbauDatum).toLocaleDateString('de-DE')}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-base-content">
          ${ausbauDatum}
        </td>
        <td class="px-6 py-4 text-sm text-base-content">
          ${letzterStandHtml}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-base-content">
          ${zaehler._count.tankfuellungen}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
          <button
            onclick="viewZaehlerDetails(${zaehler.id})"
            class="text-blue-600 hover:text-blue-900 mr-3"
          >
            Details
          </button>
          ${!zaehler.istAktiv ? `
            <button
              onclick="deleteZaehler(${zaehler.id})"
              class="text-red-600 hover:text-red-900"
            >
              L√∂schen
            </button>
          ` : ''}
        </td>
      `;

      tbody.appendChild(row);
    });
  }

  // Modal √∂ffnen
  function openModal() {
    const modal = document.getElementById('zaehler-modal');
    const form = document.getElementById('zaehler-form');
    const letzterStandContainer = document.getElementById('letzter-stand-container');

    // Formular zur√ºcksetzen
    form.reset();

    // Heute als Standard-Datum setzen
    const heute = new Date().toISOString().split('T')[0];
    document.getElementById('einbauDatum').value = heute;

    // Wenn ein aktiver Z√§hler existiert, Ausbaustand-Feld anzeigen
    const letzterStandInput = document.getElementById('letzterStandAlterZaehler');
    if (aktiverZaehler) {
      letzterStandContainer.style.display = 'block';
      letzterStandInput.required = true;
      // Letzten Aufenthalt-Stand als Vorschlag eintragen
      if (letzterStandInput && aktiverZaehler.letzterAufenthaltStand) {
        letzterStandInput.value = aktiverZaehler.letzterAufenthaltStand.toFixed(1);
      }
    } else {
      letzterStandContainer.style.display = 'none';
      letzterStandInput.required = false;
    }

    modal.classList.remove('hidden');
  }

  // Modal schlie√üen
  function closeModal() {
    const modal = document.getElementById('zaehler-modal');
    modal.classList.add('hidden');
  }

  // Neuen Z√§hler erstellen
  async function createZaehler(formData) {
    try {
      const response = await fetch('/api/zaehler', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData),
      });

      if (response.ok) {
        const neuerZaehler = await response.json();
        console.log('Z√§hler erfolgreich erstellt:', neuerZaehler);
        closeModal();
        loadZaehler(); // Tabelle neu laden
      } else {
        const error = await response.json();
        alert('Fehler beim Erstellen des Z√§hlers: ' + error.error);
      }
    } catch (error) {
      console.error('Fehler beim Erstellen des Z√§hlers:', error);
      alert('Fehler beim Erstellen des Z√§hlers');
    }
  }

  // Z√§hler-Details anzeigen
  async function viewZaehlerDetails(zaehlerId) {
    try {
      const response = await fetch(`/api/zaehler/${zaehlerId}`);
      if (response.ok) {
        const zaehler = await response.json();
        showZaehlerDetailsModal(zaehler);
      } else {
        alert('Fehler beim Laden der Z√§hler-Details');
      }
    } catch (error) {
      console.error('Fehler beim Laden der Z√§hler-Details:', error);
      alert('Fehler beim Laden der Z√§hler-Details');
    }
  }

  // Z√§hler-Details Modal anzeigen
  function showZaehlerDetailsModal(zaehler) {
    const modal = document.getElementById('zaehler-details-modal');
    if (!modal) return;

    console.log('üìä Z√§hler Details:', zaehler);

    // Statistiken berechnen
    const tankfuellungen = zaehler.tankfuellungen || [];
    const aufenthalte = zaehler.aufenthalte || [];

    console.log('‚õΩ Tankf√ºllungen:', tankfuellungen.length, tankfuellungen);
    console.log('üè† Aufenthalte:', aufenthalte.length, aufenthalte);

    const gesamtLiter = tankfuellungen.reduce((sum, tf) => sum + tf.liter, 0);
    const gesamtKosten = tankfuellungen.reduce((sum, tf) => sum + (tf.liter * tf.preisProLiter), 0);

    // Verbrauch berechnen (nur wenn mindestens 2 Tankf√ºllungen)
    let durchschnittlicherVerbrauch = '-';
    if (tankfuellungen.length >= 2) {
      const ersteTf = tankfuellungen[tankfuellungen.length - 1]; // √Ñlteste (niedrigster Z√§hlerstand)
      const letzteTf = tankfuellungen[0]; // Neueste (h√∂chster Z√§hlerstand)
      const stundenDifferenz = letzteTf.zaehlerstand - ersteTf.zaehlerstand;

      console.log(`üî¢ Verbrauchsberechnung:`, {
        ersteTf: ersteTf.zaehlerstand,
        letzteTf: letzteTf.zaehlerstand,
        stundenDifferenz,
        gesamtLiter
      });

      if (stundenDifferenz > 0) {
        durchschnittlicherVerbrauch = `${(gesamtLiter / stundenDifferenz).toFixed(2)} L/h`;
      }
    } else {
      console.log('‚ö†Ô∏è Nicht genug Tankf√ºllungen f√ºr Verbrauchsberechnung:', tankfuellungen.length);
    }

    // Zeitachse erstellen
    const aktivitaeten = [];
    
    // Einbau hinzuf√ºgen
    aktivitaeten.push({
      datum: new Date(zaehler.einbauDatum),
      typ: 'einbau',
      text: `Z√§hler eingebaut`,
      icon: 'üîß'
    });

    // Tankf√ºllungen hinzuf√ºgen
    tankfuellungen.forEach(tf => {
      aktivitaeten.push({
        datum: new Date(tf.datum),
        typ: 'tankfuellung',
        text: `${tf.liter}L getankt (‚Ç¨${(tf.liter * tf.preisProLiter).toFixed(2)})`,
        icon: '‚õΩ'
      });
    });

    // Aufenthalte hinzuf√ºgen
    aufenthalte.forEach(aufenthalt => {
      aktivitaeten.push({
        datum: new Date(aufenthalt.ankunft),
        typ: 'aufenthalt',
        text: `${aufenthalt.user.name}: ${aufenthalt.zaehlerAbreise - aufenthalt.zaehlerAnkunft}h`,
        icon: 'üè†'
      });
    });

    // Ausbau hinzuf√ºgen (falls vorhanden)
    if (zaehler.ausbauDatum) {
      aktivitaeten.push({
        datum: new Date(zaehler.ausbauDatum),
        typ: 'ausbau',
        text: `Z√§hler ausgebaut (Ausbaustand: ${zaehler.letzterStand.toFixed(1)}h, Letzter Aufenthalt: ${zaehler.letzterAufenthaltStand.toFixed(1)}h)`,
        icon: 'üì¶'
      });
    }

    // Nach Datum sortieren
    aktivitaeten.sort((a, b) => a.datum - b.datum);

    // Modal-Inhalt erstellen
    modal.innerHTML = `
      <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full">
        <div class="relative top-10 mx-auto p-5 border w-4/5 max-w-4xl shadow-lg rounded-md bg-white dark:bg-gray-800">
          <div class="mt-3">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-xl font-medium text-gray-900 dark:text-white">
                Z√§hler #${zaehler.id} - Details
              </h3>
              <button onclick="closeZaehlerDetailsModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                <span class="text-2xl">&times;</span>
              </button>
            </div>

            <!-- Grunddaten -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                <h4 class="font-medium text-gray-900 dark:text-white mb-3">Grunddaten</h4>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Status:</span>
                    <span class="font-medium ${zaehler.istAktiv ? 'text-green-600' : 'text-gray-600'}">
                      ${zaehler.istAktiv ? 'Aktiv' : 'Inaktiv'}
                    </span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Einbaudatum:</span>
                    <span class="font-medium">${new Date(zaehler.einbauDatum).toLocaleDateString('de-DE')}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Ausbaudatum:</span>
                    <span class="font-medium">${zaehler.ausbauDatum ? new Date(zaehler.ausbauDatum).toLocaleDateString('de-DE') : 'Noch aktiv'}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Letzter Aufenthalt-Stand:</span>
                    <span class="font-medium">${zaehler.letzterAufenthaltStand.toFixed(1)} h</span>
                  </div>
                  ${!zaehler.istAktiv ? `
                    <div class="flex justify-between">
                      <span class="text-gray-600 dark:text-gray-400">Ausbaustand:</span>
                      <span class="font-medium">${zaehler.letzterStand.toFixed(1)} h</span>
                    </div>
                  ` : ''}
                  ${zaehler.notizen ? `
                    <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-600">
                      <span class="text-gray-600 dark:text-gray-400">Notizen:</span>
                      <p class="text-sm mt-1">${zaehler.notizen}</p>
                    </div>
                  ` : ''}
                </div>
              </div>

              <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                <h4 class="font-medium text-gray-900 dark:text-white mb-3">Statistiken</h4>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Tankf√ºllungen:</span>
                    <span class="font-medium">${tankfuellungen.length}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Aufenthalte:</span>
                    <span class="font-medium">${aufenthalte.length}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Gesamt Liter:</span>
                    <span class="font-medium">${gesamtLiter.toFixed(1)} L</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Gesamt Kosten:</span>
                    <span class="font-medium">‚Ç¨${gesamtKosten.toFixed(2)}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">√ò Verbrauch:</span>
                    <span class="font-medium">${durchschnittlicherVerbrauch}</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Zeitachse -->
            <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
              <h4 class="font-medium text-gray-900 dark:text-white mb-3">Zeitachse</h4>
              <div class="space-y-3">
                ${aktivitaeten.map(aktivitaet => `
                  <div class="flex items-center space-x-3">
                    <span class="text-lg">${aktivitaet.icon}</span>
                    <div class="flex-1">
                      <div class="text-sm font-medium text-gray-900 dark:text-white">
                        ${aktivitaet.text}
                      </div>
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        ${aktivitaet.datum.toLocaleDateString('de-DE')} ${aktivitaet.datum.toLocaleTimeString('de-DE', {hour: '2-digit', minute: '2-digit'})}
                      </div>
                    </div>
                  </div>
                `).join('')}
              </div>
            </div>

            <div class="mt-6 flex justify-end">
              <button onclick="closeZaehlerDetailsModal()" class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-600 hover:bg-gray-200 dark:hover:bg-gray-500 rounded-md">
                Schlie√üen
              </button>
            </div>
          </div>
        </div>
      </div>
    `;

    modal.classList.remove('hidden');
  }

  // Z√§hler-Details Modal schlie√üen
  function closeZaehlerDetailsModal() {
    const modal = document.getElementById('zaehler-details-modal');
    if (modal) {
      modal.classList.add('hidden');
    }
  }

  // Z√§hler l√∂schen
  async function deleteZaehler(zaehlerId) {
    if (!confirm('Sind Sie sicher, dass Sie diesen Z√§hler l√∂schen m√∂chten?')) {
      return;
    }

    try {
      const response = await fetch(`/api/zaehler/${zaehlerId}`, {
        method: 'DELETE',
      });

      if (response.ok) {
        console.log('Z√§hler erfolgreich gel√∂scht');
        loadZaehler(); // Tabelle neu laden
      } else {
        const error = await response.json();
        alert('Fehler beim L√∂schen des Z√§hlers: ' + error.error);
      }
    } catch (error) {
      console.error('Fehler beim L√∂schen des Z√§hlers:', error);
      alert('Fehler beim L√∂schen des Z√§hlers');
    }
  }

  // Event-Listener
  document.addEventListener('DOMContentLoaded', () => {
    loadZaehler();

    // Modal-Buttons
    document.getElementById('neuer-zaehler-btn').addEventListener('click', openModal);
    document.getElementById('modal-cancel').addEventListener('click', closeModal);

    // Form-Submit
    document.getElementById('zaehler-form').addEventListener('submit', (e) => {
      e.preventDefault();

      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      // Wenn ein aktiver Z√§hler existiert, wird er automatisch ersetzt
      data.ersetzeAktiven = aktiverZaehler ? true : false;

      createZaehler(data);
    });

    // Modal schlie√üen bei Klick au√üerhalb
    document.getElementById('zaehler-modal').addEventListener('click', (e) => {
      if (e.target.id === 'zaehler-modal') {
        closeModal();
      }
    });
  });

  // Globale Funktionen f√ºr onclick-Handler
  window.viewZaehlerDetails = viewZaehlerDetails;
  window.deleteZaehler = deleteZaehler;
  window.closeZaehlerDetailsModal = closeZaehlerDetailsModal;
</script>
