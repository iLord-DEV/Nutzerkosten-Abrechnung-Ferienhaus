---
import ProtectedLayout from '../../layouts/ProtectedLayout.astro';
import { requireAdmin } from '../../utils/auth';

// Admin-Berechtigung prüfen
try {
  await requireAdmin(Astro);
} catch (error) {
  return Astro.redirect('/login');
}
---

<ProtectedLayout title="Benutzer verwalten - Nutzerkosten">
  <div class="section-container">
    <div class="page-header">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="page-title">
            Benutzer verwalten
          </h1>
          <p class="page-description">
            Hier können Sie alle Benutzer des Systems verwalten.
          </p>
        </div>
        <div class="flex space-x-3">
          <a href="/admin/dashboard" class="btn btn-ghost">
            ← Zurück zum Dashboard
          </a>
          <button onclick="openCreateUserModal()" class="btn btn-primary">
            ➕ Neuen Benutzer
          </button>
        </div>
      </div>
    </div>

    <!-- Benutzer-Tabelle -->
    <div class="card-container">
      <div class="overflow-x-auto">
          <table class="table table-zebra">
            <thead>
              <tr>
                <th>Name</th>
                <th>E-Mail</th>
                <th>Rolle</th>
                <th>Erstellt</th>
                <th>Aktionen</th>
              </tr>
            </thead>
            <tbody id="benutzer-tbody">
              <!-- Wird dynamisch geladen -->
            </tbody>
          </table>
        </div>
    </div>
  </div>

  <!-- Modal für neuen Benutzer -->
  <dialog id="create-user-modal" class="modal">
    <div class="modal-box">
      <h3 class="text-lg font-bold mb-4">
        Neuen Benutzer erstellen
      </h3>
      <form id="create-user-form" class="space-y-4">
        <div class="form-control">
          <label for="name" class="label">
            <span class="label-text">Name</span>
          </label>
          <input type="text" id="name" name="name" required class="input input-bordered w-full">
        </div>
        <div class="form-control">
          <label for="email" class="label">
            <span class="label-text">E-Mail</span>
          </label>
          <input type="email" id="email" name="email" required class="input input-bordered w-full">
        </div>
        <div class="form-control">
          <label for="role" class="label">
            <span class="label-text">Rolle</span>
          </label>
          <select id="role" name="role" required class="select select-bordered w-full">
            <option value="USER">Benutzer</option>
            <option value="ADMIN">Administrator</option>
          </select>
        </div>
        <div class="form-control">
          <label for="username" class="label">
            <span class="label-text">Benutzername (optional)</span>
          </label>
          <input type="text" id="username" name="username" class="input input-bordered w-full" placeholder="Optional - für Login mit Username">
          <label class="label">
            <span class="label-text-alt">Kann leer gelassen werden. Falls gesetzt, kann der Benutzer sich mit Username ODER E-Mail einloggen.</span>
          </label>
        </div>
        <div class="modal-action">
          <button type="button" onclick="closeCreateUserModal()" class="btn btn-ghost">
            Abbrechen
          </button>
          <button type="submit" class="btn btn-primary">
            Erstellen
          </button>
        </div>
      </form>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
  </dialog>

</ProtectedLayout>

<script>
  let currentUser = null;
  let benutzer = [];

  // Benutzer-Informationen laden
  async function loadUserInfo() {
    try {
      const response = await fetch('/api/auth/me');
      if (response.ok) {
        currentUser = await response.json();
        if (currentUser.role !== 'ADMIN') {
          window.location.href = '/dashboard';
        }
      } else {
        window.location.href = '/login';
      }
    } catch (error) {
      console.error('Fehler beim Laden der Benutzer-Informationen:', error);
      window.location.href = '/login';
    }
  }

  function escapeHtml(str: string | null | undefined): string {
    if (!str) return '';
    return str
      .replace(/&/g, '&amp;')
      .replace(/</g, '&lt;')
      .replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;')
      .replace(/'/g, '&#039;');
  }

  // Benutzer laden
  async function loadBenutzer() {
    try {
      const response = await fetch('/api/users');
      if (response.ok) {
        benutzer = await response.json();
        renderBenutzer();
      }
    } catch (error) {
      console.error('Fehler beim Laden der Benutzer:', error);
    }
  }

  // Benutzer rendern
  function renderBenutzer() {
    const tbody = document.getElementById('benutzer-tbody');
    if (!tbody) return;

    tbody.innerHTML = '';

    benutzer.forEach((user) => {
      const row = document.createElement('tr');
      const createdAt = user.createdAt ? new Date(user.createdAt).toLocaleDateString('de-DE', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit'
      }) : 'Unbekannt';

      // Badge basierend auf Status
      const nameBadge = user.isKind
        ? 'badge badge-info'
        : user.beguenstigt
          ? 'badge badge-success'
          : '';

      row.innerHTML = `
        <td>
          ${nameBadge ? `<span class="${nameBadge}">${escapeHtml(user.name)}</span>` : escapeHtml(user.name)}
        </td>
        <td>${escapeHtml(user.email)}</td>
        <td>
          <span class="badge ${user.role === 'ADMIN' ? 'badge-secondary' : 'badge-ghost'}">
            ${user.role}
          </span>
        </td>
        <td>${createdAt}</td>
        <td>
          <a href="/admin/benutzer/${user.id}/edit" class="btn btn-ghost btn-xs">
            Bearbeiten
          </a>
          <button onclick="deleteUser(${user.id})" class="btn btn-ghost btn-xs text-error">
            Löschen
          </button>
        </td>
      `;

      tbody.appendChild(row);
    });
  }

  // Modal für neuen Benutzer öffnen
  function openCreateUserModal() {
    (document.getElementById('create-user-modal') as HTMLDialogElement).showModal();
  }

  // Modal für neuen Benutzer schließen
  function closeCreateUserModal() {
    (document.getElementById('create-user-modal') as HTMLDialogElement).close();
    (document.getElementById('create-user-form') as HTMLFormElement).reset();
  }


  // Neuen Benutzer erstellen
  async function createUser(event) {
    event.preventDefault();

    const formData = new FormData(event.target);
    const userData = {
      name: formData.get('name'),
      email: formData.get('email'),
      role: formData.get('role'),
      username: formData.get('username') || null
    };

    try {
      const response = await (window as any).csrfFetch('/api/users', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(userData),
      });

      if (response.ok) {
        closeCreateUserModal();
        await loadBenutzer();
        alert('Benutzer erfolgreich erstellt!');
      } else {
        const error = await response.json();
        alert(`Fehler: ${error.error}`);
      }
    } catch (error) {
      console.error('Fehler beim Erstellen des Benutzers:', error);
      alert('Fehler beim Erstellen des Benutzers');
    }
  }


  // Benutzer löschen
  async function deleteUser(userId) {
    if (!confirm('Möchten Sie diesen Benutzer wirklich löschen?')) {
      return;
    }

    try {
      const response = await (window as any).csrfFetch('/api/users', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ id: userId }),
      });

      if (response.ok) {
        await loadBenutzer();
        alert('Benutzer erfolgreich gelöscht!');
      } else {
        const error = await response.json();
        alert(`Fehler: ${error.error}`);
      }
    } catch (error) {
      console.error('Fehler beim Löschen des Benutzers:', error);
      alert('Fehler beim Löschen des Benutzers');
    }
  }

  // Funktionen global verfügbar machen für onclick
  (window as any).openCreateUserModal = openCreateUserModal;
  (window as any).closeCreateUserModal = closeCreateUserModal;
  (window as any).deleteUser = deleteUser;

  // Event-Listener
  document.addEventListener('DOMContentLoaded', () => {
    loadUserInfo();
    loadBenutzer();

    document.getElementById('create-user-form')?.addEventListener('submit', createUser);
  });
</script>
