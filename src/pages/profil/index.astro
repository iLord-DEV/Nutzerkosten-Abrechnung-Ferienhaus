---
import ProtectedLayout from '../../layouts/ProtectedLayout.astro';
import { requireAuth } from '../../utils/auth';

// Authentifizierung prüfen
try {
  await requireAuth(Astro);
} catch (error) {
  return Astro.redirect('/login');
}
---

<ProtectedLayout title="Mein Profil - Nutzerkosten">
  <div class="section-container">
    <div class="page-header">
      <h1 class="page-title">Mein Profil</h1>
      <p class="page-description">
        Hier können Sie Ihre persönlichen Daten bearbeiten.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Profilbild -->
      <div class="card-container">
        <h2 class="text-lg font-medium text-base-content mb-4">Profilbild</h2>

        <div class="flex flex-col items-center">
          <!-- Avatar Preview -->
          <div class="relative group">
            <div id="avatar-preview" class="w-32 h-32 rounded-full bg-primary text-primary-content flex items-center justify-center text-4xl font-bold overflow-hidden">
              <span id="avatar-initials">--</span>
              <img id="avatar-image" src="" alt="Profilbild" class="w-full h-full object-cover hidden" />
            </div>

            <!-- Overlay beim Hover -->
            <label for="profile-image-input" class="absolute inset-0 bg-black/50 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM18.75 10.5h.008v.008h-.008V10.5z" />
              </svg>
            </label>
          </div>

          <input type="file" id="profile-image-input" accept="image/*" class="hidden" />

          <p class="text-sm text-base-content/60 mt-4 text-center">
            Klicken Sie auf das Bild, um ein neues Profilbild hochzuladen.
          </p>

          <!-- Bild entfernen Button -->
          <button id="remove-image-btn" class="btn btn-ghost btn-sm text-error mt-2 hidden">
            Bild entfernen
          </button>
        </div>
      </div>

      <!-- Profildaten -->
      <div class="card-container lg:col-span-2">
        <h2 class="text-lg font-medium text-base-content mb-4">Persönliche Daten</h2>

        <form id="profile-form" class="space-y-4">
          <!-- Nur-Lesen Felder -->
          <div>
            <label class="block text-sm font-medium text-base-content">Name</label>
            <p id="name" class="mt-1 text-base-content py-2">–</p>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-base-content">Rolle</label>
              <p id="user-role" class="mt-1 text-base-content/70">–</p>
            </div>
            <div>
              <label class="block text-sm font-medium text-base-content">Status</label>
              <p id="user-status" class="mt-1">–</p>
            </div>
          </div>

          <div class="divider"></div>

          <!-- Editierbar: Benutzername -->
          <div>
            <label for="username" class="block text-sm font-medium text-base-content">Benutzername</label>
            <input type="text" id="username" name="username" class="input input-bordered w-full mt-1" />
            <p class="mt-1 text-xs text-base-content/60">
              Zum Anmelden (alternativ zur E-Mail).
            </p>
          </div>

          <!-- Editierbar: E-Mail -->
          <div>
            <label for="email" class="block text-sm font-medium text-base-content">E-Mail</label>
            <input type="email" id="email" name="email" required class="input input-bordered w-full mt-1" />
            <p class="mt-1 text-xs text-base-content/60">
              Mit dieser E-Mail erhalten Sie Anmelde-Links.
            </p>
          </div>

          <div class="flex justify-end gap-3">
            <button type="submit" class="btn btn-primary">
              Speichern
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Benachrichtigungs-Einstellungen -->
    <div class="card-container mt-6">
      <h2 class="text-lg font-medium text-base-content mb-4">E-Mail-Benachrichtigungen</h2>
      <p class="text-sm text-base-content/60 mb-4">
        Wählen Sie, bei welchen Ereignissen Sie per E-Mail benachrichtigt werden möchten.
      </p>

      <div class="space-y-4">
        <label class="flex items-center gap-3 cursor-pointer">
          <input type="checkbox" id="notify-comments" class="checkbox checkbox-primary" />
          <div>
            <span class="font-medium text-base-content">Neue Kommentare</span>
            <p class="text-sm text-base-content/60">Bei neuen Kommentaren zur Terminplanung</p>
          </div>
        </label>

        <label class="flex items-center gap-3 cursor-pointer">
          <input type="checkbox" id="notify-termine" class="checkbox checkbox-primary" />
          <div>
            <span class="font-medium text-base-content">Neue Termine</span>
            <p class="text-sm text-base-content/60">Wenn jemand einen neuen Termin erstellt</p>
          </div>
        </label>
      </div>

      <div class="mt-4 pt-4 border-t border-base-300">
        <button id="save-notifications-btn" class="btn btn-primary btn-sm">
          Einstellungen speichern
        </button>
      </div>
    </div>

    <!-- Push-Benachrichtigungen -->
    <div class="card-container mt-6">
      <h2 class="text-lg font-medium text-base-content mb-4">Push-Benachrichtigungen</h2>
      <p class="text-sm text-base-content/60 mb-4">
        Erhalte Benachrichtigungen direkt auf deinem Gerät - auch wenn die App nicht geöffnet ist.
      </p>

      <div id="push-status" class="flex items-center gap-3">
        <span id="push-status-text" class="text-base-content/70">Status wird geladen...</span>
      </div>

      <div class="mt-4 pt-4 border-t border-base-300">
        <button id="push-toggle-btn" class="btn btn-sm hidden">
          Push aktivieren
        </button>
        <p id="push-not-supported" class="text-sm text-warning hidden">
          Push-Benachrichtigungen werden von diesem Browser nicht unterstützt.
        </p>
      </div>
    </div>

    <!-- Feedback Messages -->
    <div id="success-message" class="alert alert-success mt-6 hidden">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <span>Profil erfolgreich gespeichert!</span>
    </div>

    <div id="error-message" class="alert alert-error mt-6 hidden">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <span id="error-text">Fehler beim Speichern des Profils.</span>
    </div>
  </div>
</ProtectedLayout>

<script>
  interface User {
    id: number;
    name: string;
    email: string;
    username: string | null;
    role: 'ADMIN' | 'USER';
    beguenstigt: boolean;
    profileImage: string | null;
    notifyOnComments: boolean;
    notifyOnTermine: boolean;
  }

  let currentUser: User | null = null;

  // Benutzer-Informationen laden
  async function loadUserInfo() {
    try {
      const response = await fetch('/api/auth/me');
      if (response.ok) {
        currentUser = await response.json();
        populateForm();
      } else {
        window.location.href = '/login';
      }
    } catch (error) {
      console.error('Fehler beim Laden der Benutzer-Informationen:', error);
      window.location.href = '/login';
    }
  }

  // Formular mit Benutzerdaten füllen
  function populateForm() {
    if (!currentUser) return;

    const nameEl = document.getElementById('name');
    const usernameInput = document.getElementById('username') as HTMLInputElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const roleEl = document.getElementById('user-role');
    const statusEl = document.getElementById('user-status');
    const avatarInitials = document.getElementById('avatar-initials');
    const avatarImage = document.getElementById('avatar-image') as HTMLImageElement;
    const removeImageBtn = document.getElementById('remove-image-btn');

    // Nur-Lesen Feld
    if (nameEl) nameEl.textContent = currentUser.name;

    // Editierbare Felder
    if (usernameInput) usernameInput.value = currentUser.username || '';
    if (emailInput) emailInput.value = currentUser.email;

    if (roleEl) {
      roleEl.textContent = currentUser.role === 'ADMIN' ? 'Administrator' : 'Benutzer';
    }

    if (statusEl) {
      if (currentUser.beguenstigt) {
        statusEl.innerHTML = '<span class="badge badge-success">Begünstigt</span>';
      } else {
        statusEl.innerHTML = '<span class="badge badge-neutral">Familienmitglied</span>';
      }
    }

    // Avatar
    if (currentUser.profileImage && avatarImage && avatarInitials) {
      avatarImage.src = currentUser.profileImage;
      avatarImage.classList.remove('hidden');
      avatarInitials.classList.add('hidden');
      if (removeImageBtn) removeImageBtn.classList.remove('hidden');
    } else if (avatarInitials) {
      const initials = currentUser.name
        .split(' ')
        .map(n => n[0])
        .join('')
        .toUpperCase()
        .substring(0, 2);
      avatarInitials.textContent = initials;
    }

    // Notification-Einstellungen
    const notifyComments = document.getElementById('notify-comments') as HTMLInputElement;
    const notifyTermine = document.getElementById('notify-termine') as HTMLInputElement;

    if (notifyComments) notifyComments.checked = currentUser.notifyOnComments;
    if (notifyTermine) notifyTermine.checked = currentUser.notifyOnTermine;
  }

  // Profil speichern
  async function saveProfile(event: Event) {
    event.preventDefault();

    const form = event.target as HTMLFormElement;
    const formData = new FormData(form);

    const userData = {
      username: (formData.get('username') as string) || null,
      email: formData.get('email') as string,
    };

    try {
      const response = await (window as any).csrfFetch('/api/profil', {
        method: 'PUT',
        body: JSON.stringify(userData),
      });

      if (response.ok) {
        showMessage('success');
        // Aktualisiere die lokalen Daten
        currentUser = await response.json();
        populateForm();
      } else {
        const error = await response.json();
        showMessage('error', error.error || 'Fehler beim Speichern');
      }
    } catch (error) {
      console.error('Fehler beim Speichern des Profils:', error);
      showMessage('error', 'Netzwerkfehler beim Speichern');
    }
  }

  // Profilbild hochladen
  async function uploadProfileImage(file: File) {
    const formData = new FormData();
    formData.append('image', file);

    try {
      const response = await (window as any).csrfFetch('/api/profil/image', {
        method: 'POST',
        body: formData,
      });

      if (response.ok) {
        const result = await response.json();
        const avatarImage = document.getElementById('avatar-image') as HTMLImageElement;
        const avatarInitials = document.getElementById('avatar-initials');
        const removeImageBtn = document.getElementById('remove-image-btn');

        if (avatarImage && result.profileImage) {
          // Cache-Busting für Dev-Server: Timestamp anhängen
          avatarImage.src = result.profileImage + '?t=' + Date.now();
          avatarImage.classList.remove('hidden');
          if (avatarInitials) avatarInitials.classList.add('hidden');
          if (removeImageBtn) removeImageBtn.classList.remove('hidden');
        }
        showMessage('success');
      } else {
        const error = await response.json();
        showMessage('error', error.error || 'Fehler beim Hochladen');
      }
    } catch (error) {
      console.error('Fehler beim Hochladen des Bildes:', error);
      showMessage('error', 'Netzwerkfehler beim Hochladen');
    }
  }

  // Profilbild entfernen
  async function removeProfileImage() {
    try {
      const response = await (window as any).csrfFetch('/api/profil/image', {
        method: 'DELETE',
      });

      if (response.ok) {
        const avatarImage = document.getElementById('avatar-image') as HTMLImageElement;
        const avatarInitials = document.getElementById('avatar-initials');
        const removeImageBtn = document.getElementById('remove-image-btn');

        if (avatarImage && avatarInitials && currentUser) {
          avatarImage.classList.add('hidden');
          avatarImage.src = '';
          avatarInitials.classList.remove('hidden');

          const initials = currentUser.name
            .split(' ')
            .map(n => n[0])
            .join('')
            .toUpperCase()
            .substring(0, 2);
          avatarInitials.textContent = initials;

          if (removeImageBtn) removeImageBtn.classList.add('hidden');
        }

        showMessage('success');
      } else {
        const error = await response.json();
        showMessage('error', error.error || 'Fehler beim Entfernen');
      }
    } catch (error) {
      console.error('Fehler beim Entfernen des Bildes:', error);
      showMessage('error', 'Netzwerkfehler beim Entfernen');
    }
  }

  // Benachrichtigungs-Einstellungen speichern
  async function saveNotifications() {
    const notifyComments = (document.getElementById('notify-comments') as HTMLInputElement)?.checked;
    const notifyTermine = (document.getElementById('notify-termine') as HTMLInputElement)?.checked;

    try {
      const response = await (window as any).csrfFetch('/api/profil', {
        method: 'PUT',
        body: JSON.stringify({
          email: currentUser?.email,
          username: currentUser?.username,
          notifyOnComments: notifyComments,
          notifyOnTermine: notifyTermine,
        }),
      });

      if (response.ok) {
        showMessage('success');
        currentUser = await response.json();
      } else {
        const error = await response.json();
        showMessage('error', error.error || 'Fehler beim Speichern');
      }
    } catch (error) {
      console.error('Fehler beim Speichern der Benachrichtigungen:', error);
      showMessage('error', 'Netzwerkfehler beim Speichern');
    }
  }

  // Nachricht anzeigen
  function showMessage(type: 'success' | 'error', text?: string) {
    const successEl = document.getElementById('success-message');
    const errorEl = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');

    // Alle verstecken
    successEl?.classList.add('hidden');
    errorEl?.classList.add('hidden');

    if (type === 'success') {
      successEl?.classList.remove('hidden');
    } else {
      if (errorText && text) errorText.textContent = text;
      errorEl?.classList.remove('hidden');
    }

    // Nach 3 Sekunden ausblenden
    setTimeout(() => {
      successEl?.classList.add('hidden');
      errorEl?.classList.add('hidden');
    }, 3000);
  }

  // Event-Listener
  document.addEventListener('DOMContentLoaded', () => {
    loadUserInfo();

    // Formular Submit
    document.getElementById('profile-form')?.addEventListener('submit', saveProfile);

    // Bild-Upload
    document.getElementById('profile-image-input')?.addEventListener('change', (event) => {
      const input = event.target as HTMLInputElement;
      if (input.files && input.files[0]) {
        uploadProfileImage(input.files[0]);
      }
    });

    // Bild entfernen
    document.getElementById('remove-image-btn')?.addEventListener('click', () => {
      if (confirm('Möchten Sie Ihr Profilbild wirklich entfernen?')) {
        removeProfileImage();
      }
    });

    // Benachrichtigungen speichern
    document.getElementById('save-notifications-btn')?.addEventListener('click', saveNotifications);

    // Push-Benachrichtigungen initialisieren
    initPushNotifications();
  });

  // ========================================
  // Push-Benachrichtigungen
  // ========================================

  let pushSubscription: PushSubscription | null = null;

  async function initPushNotifications() {
    const statusText = document.getElementById('push-status-text');
    const toggleBtn = document.getElementById('push-toggle-btn');
    const notSupportedMsg = document.getElementById('push-not-supported');

    // Prüfen ob Push unterstützt wird
    if (!('serviceWorker' in navigator) || !('PushManager' in window)) {
      if (statusText) statusText.textContent = '';
      if (notSupportedMsg) notSupportedMsg.classList.remove('hidden');
      return;
    }

    try {
      // Service Worker muss registriert sein — mit Timeout, da .ready nie rejected
      const registration = await Promise.race([
        navigator.serviceWorker.ready,
        new Promise<never>((_, reject) =>
          setTimeout(() => reject(new Error('timeout')), 5000)
        )
      ]);

      // Aktuelle Subscription prüfen
      pushSubscription = await registration.pushManager.getSubscription();

      if (pushSubscription) {
        // Push ist aktiviert
        if (statusText) {
          statusText.innerHTML = '<span class="badge badge-success">Aktiviert</span>';
        }
        if (toggleBtn) {
          toggleBtn.textContent = 'Push deaktivieren';
          toggleBtn.classList.remove('hidden', 'btn-primary');
          toggleBtn.classList.add('btn-error');
        }
      } else {
        // Push ist nicht aktiviert
        if (statusText) {
          statusText.innerHTML = '<span class="badge badge-neutral">Nicht aktiviert</span>';
        }
        if (toggleBtn) {
          toggleBtn.textContent = 'Push aktivieren';
          toggleBtn.classList.remove('hidden', 'btn-error');
          toggleBtn.classList.add('btn-primary');
        }
      }

      // Toggle-Button Event Listener
      toggleBtn?.addEventListener('click', togglePushSubscription);

    } catch (error: any) {
      console.error('Fehler bei Push-Initialisierung:', error);
      if (error?.message === 'timeout') {
        // SW nicht verfügbar — Push nicht möglich
        if (statusText) statusText.textContent = '';
        if (notSupportedMsg) notSupportedMsg.classList.remove('hidden');
      } else {
        if (statusText) statusText.textContent = 'Fehler beim Laden des Push-Status';
      }
    }
  }

  async function togglePushSubscription() {
    if (pushSubscription) {
      await unsubscribeFromPush();
    } else {
      await subscribeToPush();
    }
  }

  async function subscribeToPush() {
    const toggleBtn = document.getElementById('push-toggle-btn');
    if (toggleBtn) {
      toggleBtn.setAttribute('disabled', 'true');
      toggleBtn.textContent = 'Wird aktiviert...';
    }

    try {
      // VAPID Public Key vom Server holen
      const keyResponse = await fetch('/api/push/vapid-public-key');
      if (!keyResponse.ok) {
        throw new Error('VAPID Key nicht verfügbar');
      }
      const { publicKey } = await keyResponse.json();

      // Service Worker registrieren
      const registration = await navigator.serviceWorker.ready;

      // Push-Berechtigung anfordern und Subscription erstellen
      pushSubscription = await registration.pushManager.subscribe({
        userVisibleOnly: true,
        applicationServerKey: urlBase64ToUint8Array(publicKey)
      });

      // Subscription an Backend senden
      const response = await (window as any).csrfFetch('/api/push/subscribe', {
        method: 'POST',
        body: JSON.stringify({
          endpoint: pushSubscription.endpoint,
          keys: {
            p256dh: arrayBufferToBase64(pushSubscription.getKey('p256dh')),
            auth: arrayBufferToBase64(pushSubscription.getKey('auth'))
          }
        })
      });

      if (!response.ok) {
        throw new Error('Subscription konnte nicht gespeichert werden');
      }

      // UI aktualisieren
      const statusText = document.getElementById('push-status-text');
      if (statusText) {
        statusText.innerHTML = '<span class="badge badge-success">Aktiviert</span>';
      }
      if (toggleBtn) {
        toggleBtn.removeAttribute('disabled');
        toggleBtn.textContent = 'Push deaktivieren';
        toggleBtn.classList.remove('btn-primary');
        toggleBtn.classList.add('btn-error');
      }

      showMessage('success');

    } catch (error: any) {
      console.error('Fehler bei Push-Aktivierung:', error);

      // Bei Berechtigungsfehler
      if (Notification.permission === 'denied') {
        showMessage('error', 'Push-Benachrichtigungen wurden im Browser blockiert');
      } else {
        showMessage('error', error.message || 'Fehler beim Aktivieren von Push');
      }

      if (toggleBtn) {
        toggleBtn.removeAttribute('disabled');
        toggleBtn.textContent = 'Push aktivieren';
      }
    }
  }

  async function unsubscribeFromPush() {
    const toggleBtn = document.getElementById('push-toggle-btn');
    if (toggleBtn) {
      toggleBtn.setAttribute('disabled', 'true');
      toggleBtn.textContent = 'Wird deaktiviert...';
    }

    try {
      if (pushSubscription) {
        // Vom Backend abmelden
        await (window as any).csrfFetch('/api/push/subscribe', {
          method: 'DELETE',
          body: JSON.stringify({ endpoint: pushSubscription.endpoint })
        });

        // Lokale Subscription beenden
        await pushSubscription.unsubscribe();
        pushSubscription = null;
      }

      // UI aktualisieren
      const statusText = document.getElementById('push-status-text');
      if (statusText) {
        statusText.innerHTML = '<span class="badge badge-neutral">Nicht aktiviert</span>';
      }
      if (toggleBtn) {
        toggleBtn.removeAttribute('disabled');
        toggleBtn.textContent = 'Push aktivieren';
        toggleBtn.classList.remove('btn-error');
        toggleBtn.classList.add('btn-primary');
      }

      showMessage('success');

    } catch (error: any) {
      console.error('Fehler bei Push-Deaktivierung:', error);
      showMessage('error', error.message || 'Fehler beim Deaktivieren von Push');

      if (toggleBtn) {
        toggleBtn.removeAttribute('disabled');
        toggleBtn.textContent = 'Push deaktivieren';
      }
    }
  }

  // Hilfsfunktion: Base64 URL zu Uint8Array konvertieren
  function urlBase64ToUint8Array(base64String: string): Uint8Array {
    const padding = '='.repeat((4 - base64String.length % 4) % 4);
    const base64 = (base64String + padding)
      .replace(/-/g, '+')
      .replace(/_/g, '/');
    const rawData = window.atob(base64);
    const outputArray = new Uint8Array(rawData.length);
    for (let i = 0; i < rawData.length; ++i) {
      outputArray[i] = rawData.charCodeAt(i);
    }
    return outputArray;
  }

  // Hilfsfunktion: ArrayBuffer zu Base64 konvertieren
  function arrayBufferToBase64(buffer: ArrayBuffer | null): string {
    if (!buffer) return '';
    const bytes = new Uint8Array(buffer);
    let binary = '';
    for (let i = 0; i < bytes.byteLength; i++) {
      binary += String.fromCharCode(bytes[i]);
    }
    return window.btoa(binary);
  }
</script>
