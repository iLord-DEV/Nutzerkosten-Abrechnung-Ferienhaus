  let selectedUserId: number | null = currentAufenthalt.userId;

  let currentPreise: {
    oelpreisProLiter?: number;
    uebernachtungMitglied?: number;
    uebernachtungGast?: number;
    verbrauchProStunde?: number;
  } = {};

  let alleTankfuellungen: Array<{
    id: number;
    datum: string;
    zaehlerstand: number;
    liter: number;
    preisProLiter: number;
  }> = [];

  // Benachrichtigung anzeigen
  function showNotification(message: string, type: 'success' | 'error' | 'info' = 'info') {
    const notification = document.getElementById('notification');
    const notificationMessage = document.getElementById('notification-message');
    const notificationIcon = document.getElementById('notification-icon');

    if (!notification || !notificationMessage || !notificationIcon) return;

    // Nachricht setzen
    notificationMessage.textContent = message;

    // Icon und Alert-Typ setzen
    let alertClass = 'alert';
    let iconPath = '';

    switch (type) {
      case 'success':
        alertClass += ' alert-success';
        iconPath = '<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />';
        break;
      case 'error':
        alertClass += ' alert-error';
        iconPath = '<path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />';
        break;
      case 'info':
      default:
        alertClass += ' alert-info';
        iconPath = '<path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />';
        break;
    }

    notification.className = alertClass;
    notificationIcon.setAttribute('fill', 'none');
    notificationIcon.setAttribute('viewBox', '0 0 24 24');
    notificationIcon.setAttribute('stroke-width', '1.5');
    notificationIcon.innerHTML = iconPath;

    // Benachrichtigung anzeigen
