---
import ProtectedLayout from '../../../layouts/ProtectedLayout.astro';

// Zugriffskontrolle
const sessionCookie = Astro.cookies.get('session');
if (!sessionCookie) {
  return Astro.redirect('/login');
}

const session = JSON.parse(sessionCookie.value);
const { id } = Astro.params;

// Aufenthalt laden
let aufenthalt = null;
try {
  // Direkt aus der Datenbank laden, ohne API-Call
  const { PrismaClient } = await import('@prisma/client');
  const prisma = new PrismaClient();
  
  aufenthalt = await prisma.aufenthalt.findUnique({
    where: { id: parseInt(id!) },
    include: {
      user: {
        select: {
          id: true,
          name: true,
          email: true,
          role: true,
          beguenstigt: true,
        },
      },
    },
  });
  
  await prisma.$disconnect();
  
  // Normale Benutzer k√∂nnen nur ihre eigenen Aufenthalte bearbeiten
  if (session.role !== 'ADMIN' && aufenthalt?.userId !== session.userId) {
    return Astro.redirect('/aufenthalte');
  }
} catch (error) {
  console.error('Fehler beim Laden des Aufenthalts:', error);
  return Astro.redirect('/aufenthalte');
}

if (!aufenthalt) {
  return Astro.redirect('/aufenthalte');
}
---

<ProtectedLayout title="Aufenthalt bearbeiten - Nutzerkosten">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
        Aufenthalt bearbeiten
      </h1>
      <p class="mt-2 text-gray-600 dark:text-gray-400">
        Bearbeiten Sie die Details des Aufenthalts
      </p>
    </div>

    <div class="bg-white dark:bg-gray-800 shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <form id="edit-form" class="space-y-6">
          <input type="hidden" id="aufenthalt-id" value={aufenthalt.id}>
          <input type="hidden" id="aufenthalt-user-id" value={aufenthalt.user.id}>
          <input type="hidden" id="aufenthalt-user-beguenstigt" value={aufenthalt.user.beguenstigt ? 'true' : 'false'}>

          <!-- Benutzer-Auswahl (nur f√ºr Admins) -->
          {session.role === 'ADMIN' && (
            <div>
              <label for="userId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Benutzer
              </label>
              <select id="userId" required class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                <!-- Wird dynamisch geladen -->
              </select>
            </div>
          )}

          <!-- Ankunft -->
          <div>
            <label for="ankunft" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Ankunft
            </label>
            <input type="date" id="ankunft" required 
                   value={new Date(aufenthalt.ankunft).toISOString().slice(0, 10)}
                   class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
          </div>

          <!-- Abreise -->
          <div>
            <label for="abreise" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Abreise
            </label>
            <input type="date" id="abreise" required 
                   value={new Date(aufenthalt.abreise).toISOString().slice(0, 10)}
                   class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
          </div>

          <!-- Z√§hlerstand bei Ankunft -->
          <div>
            <label for="zaehlerStart" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Z√§hlerstand bei Ankunft (Stunden)
            </label>
            <input type="number" id="zaehlerStart" step="1" required 
                   value={aufenthalt.zaehlerAnkunft}
                   class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
          </div>

          <!-- Z√§hlerstand bei Abreise -->
          <div>
            <label for="zaehlerEnde" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Z√§hlerstand bei Abreise (Stunden)
            </label>
            <input type="number" id="zaehlerEnde" step="1" required 
                   value={aufenthalt.zaehlerAbreise}
                   class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
          </div>

          <!-- √úbernachtungen Mitglieder -->
          <div>
            <label for="uebernachtungenMitglieder" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              √úbernachtungen Mitglieder
            </label>
            <input type="number" id="uebernachtungenMitglieder" min="1" required 
                   value={aufenthalt.uebernachtungenMitglieder}
                   class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
          </div>

          <!-- √úbernachtungen G√§ste -->
          <div>
            <label for="uebernachtungenGaeste" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              √úbernachtungen G√§ste
            </label>
            <input type="number" id="uebernachtungenGaeste" min="0" required
                   value={aufenthalt.uebernachtungenGaeste}
                   class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
          </div>

          <!-- Checkbox f√ºr beg√ºnstigte User -->
          <div id="naechte-berechnen-container" class="hidden">
            <div class="flex items-center">
              <input
                type="checkbox"
                id="naechteBerechnen"
                name="naechteBerechnen"
                checked={aufenthalt.naechteBerechnen}
                class="h-4 w-4 text-blue-600 border-gray-300 dark:border-gray-600 rounded focus:ring-blue-500"
              />
              <label for="naechteBerechnen" class="ml-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                N√§chte berechnen (√úbernachtungskosten in Gesamtsumme einbeziehen)
              </label>
            </div>
            <p class="ml-6 mt-1 text-sm text-gray-500 dark:text-gray-400">
              Nicht aktiviert = √úbernachtungen werden nicht berechnet (nur f√ºr beg√ºnstigte User)
            </p>
          </div>

          <!-- Buttons -->
          <div class="flex justify-end space-x-3">
            <a href="/aufenthalte" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md text-sm font-medium">
              Abbrechen
            </a>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
              Speichern
            </button>
          </div>
          
          <!-- Benachrichtigungs-Bereich -->
          <div id="notification" class="hidden mt-4 p-4 rounded-md">
            <div class="flex">
              <div class="flex-shrink-0">
                <span id="notification-icon" class="text-lg"></span>
              </div>
              <div class="ml-3">
                <p id="notification-message" class="text-sm font-medium"></p>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</ProtectedLayout>

<script>
  let users: Array<{ id: number; name: string; email: string; beguenstigt: boolean }> = [];
  const currentAufenthalt = {
    userId: parseInt((document.getElementById('aufenthalt-user-id') as HTMLInputElement)?.value || '0'),
    userBeguenstigt: (document.getElementById('aufenthalt-user-beguenstigt') as HTMLInputElement)?.value === 'true'
  };
  let selectedUserId: number | null = currentAufenthalt.userId;

  // Benachrichtigung anzeigen
  function showNotification(message: string, type: 'success' | 'error' | 'info' = 'info') {
    const notification = document.getElementById('notification');
    const notificationMessage = document.getElementById('notification-message');
    const notificationIcon = document.getElementById('notification-icon');
    
    if (!notification || !notificationMessage || !notificationIcon) return;
    
    // Nachricht setzen
    notificationMessage.textContent = message;
    
    // Icon und Farbe je nach Typ setzen
    let icon = '';
    let bgColor = '';
    let textColor = '';
    
    switch (type) {
      case 'success':
        icon = '‚úÖ';
        bgColor = 'bg-green-50 dark:bg-green-900/20';
        textColor = 'text-green-800 dark:text-green-200';
        break;
      case 'error':
        icon = '‚ùå';
        bgColor = 'bg-red-50 dark:bg-red-900/20';
        textColor = 'text-red-800 dark:text-red-200';
        break;
      case 'info':
      default:
        icon = '‚ÑπÔ∏è';
        bgColor = 'bg-blue-50 dark:bg-blue-900/20';
        textColor = 'text-blue-800 dark:text-blue-200';
        break;
    }
    
    notificationIcon.textContent = icon;
    notification.className = `mt-4 p-4 rounded-md ${bgColor}`;
    notificationMessage.className = `text-sm font-medium ${textColor}`;
    
    // Benachrichtigung anzeigen
    notification.classList.remove('hidden');
    
    // Bei Erfolg nach 2 Sekunden weiterleiten
    if (type === 'success') {
      setTimeout(() => {
        window.location.href = '/aufenthalte';
      }, 2000);
    }
  }

  // Benutzer laden (nur f√ºr Admins)
  async function loadUsers() {
    if (document.getElementById('userId')) {
      try {
        const response = await fetch('/api/users');
        if (response.ok) {
          users = await response.json();
          renderUserSelect();
          // Checkbox nach Laden der User aktualisieren
          updateNaechteBerechnenCheckbox();
        }
      } catch (error) {
        console.error('Fehler beim Laden der Benutzer:', error);
      }
    }
  }

  // Pr√ºfen ob der ausgew√§hlte User beg√ºnstigt ist
  function isSelectedUserBeguenstigt(): boolean {
    // Falls ein User im Dropdown ausgew√§hlt wurde UND users geladen sind
    if (selectedUserId && users.length > 0) {
      const selectedUser = users.find(u => u.id === selectedUserId);
      return selectedUser?.beguenstigt || false;
    }
    // Sonst: Verwende den initialen Wert vom aktuellen Aufenthalt
    return currentAufenthalt.userBeguenstigt;
  }

  // Checkbox f√ºr "N√§chte berechnen" anzeigen/verstecken
  function updateNaechteBerechnenCheckbox() {
    const container = document.getElementById('naechte-berechnen-container');
    const istBeguenstigt = isSelectedUserBeguenstigt();

    console.log('üîç updateNaechteBerechnenCheckbox:', {
      istBeguenstigt,
      currentAufenthaltUserBeguenstigt: currentAufenthalt.userBeguenstigt,
      selectedUserId,
      usersLength: users.length,
      containerExists: !!container
    });

    if (istBeguenstigt) {
      container?.classList.remove('hidden');
    } else {
      container?.classList.add('hidden');
    }
  }

  // Alle Caches leeren
  function clearAllCaches() {
    // localStorage leeren (falls vorhanden)
    localStorage.clear();

    // SessionStorage leeren (falls vorhanden)
    sessionStorage.clear();

    // Browser-Cache f√ºr diese Domain leeren
    if ('caches' in window) {
      caches.keys().then(names => {
        names.forEach(name => {
          caches.delete(name);
        });
      });
    }

    // Force reload der Seite um alle JavaScript-Variablen zu leeren
    // Da wir sowieso weiterleiten, ist das hier nicht n√∂tig
    // Aber wir stellen sicher, dass alle Caches geleert werden
  }

  // Benutzer-Select rendern
  function renderUserSelect() {
    const select = document.getElementById('userId') as HTMLSelectElement;
    if (select) {
      select.innerHTML = '';
      users.forEach(user => {
        const option = document.createElement('option');
        option.value = user.id.toString();
        option.textContent = user.name;
        if (user.id === currentAufenthalt.userId) {
          option.selected = true;
        }
        select.appendChild(option);
      });

      // Event-Listener f√ºr User-Auswahl
      select.addEventListener('change', (e) => {
        selectedUserId = parseInt((e.target as HTMLSelectElement).value);
        updateNaechteBerechnenCheckbox();
      });
    }
  }

  // Formular absenden
  document.getElementById('edit-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const naechteBerechnenCheckbox = document.getElementById('naechteBerechnen') as HTMLInputElement;
    // Einfach den Checkbox-Wert senden - Backend entscheidet die Logik
    const naechteBerechnen = naechteBerechnenCheckbox ? naechteBerechnenCheckbox.checked : false;

    const formData = {
      id: (document.getElementById('aufenthalt-id') as HTMLInputElement).value,
      userId: (document.getElementById('userId') as HTMLSelectElement)?.value || '',
      ankunft: (document.getElementById('ankunft') as HTMLInputElement).value,
      abreise: (document.getElementById('abreise') as HTMLInputElement).value,
      zaehlerStart: (document.getElementById('zaehlerStart') as HTMLInputElement).value,
      zaehlerEnde: (document.getElementById('zaehlerEnde') as HTMLInputElement).value,
      uebernachtungenMitglieder: (document.getElementById('uebernachtungenMitglieder') as HTMLInputElement).value,
      uebernachtungenGaeste: (document.getElementById('uebernachtungenGaeste') as HTMLInputElement).value,
      naechteBerechnen: naechteBerechnen,
    };

    // Validierung: Mitglieder-√úbernachtungen m√ºssen mindestens der Anzahl der N√§chte entsprechen
    const anzahlNaechte = Math.ceil((new Date(formData.abreise).getTime() - new Date(formData.ankunft).getTime()) / (1000 * 60 * 60 * 24));
    const uebernachtungenMitglieder = parseInt(formData.uebernachtungenMitglieder);
    
    if (uebernachtungenMitglieder < anzahlNaechte) {
      showNotification(`Die √úbernachtungen f√ºr Mitglieder (${uebernachtungenMitglieder}) k√∂nnen nicht weniger als die Anzahl der N√§chte (${anzahlNaechte}) betragen, da immer mindestens ein Mitglied anwesend sein muss.`, 'error');
      return;
    }

    try {
      const response = await fetch(`/api/aufenthalte/${formData.id}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData),
      });

      if (response.ok) {
        // Alle Caches leeren, bevor zur √úbersicht weitergeleitet wird
        clearAllCaches();
        showNotification('Aufenthalt erfolgreich aktualisiert! Sie werden weitergeleitet...', 'success');
        // Weiterleitung erfolgt automatisch nach 2 Sekunden in showNotification
      } else {
        const error = await response.json();
        showNotification(`Fehler beim Aktualisieren: ${error.error || 'Unbekannter Fehler'}`, 'error');
      }
    } catch (error) {
      console.error('Fehler beim Aktualisieren:', error);
      showNotification('Ein Fehler ist aufgetreten. Bitte versuchen Sie es erneut.', 'error');
    }
  });

  // Benutzer beim Laden der Seite laden
  document.addEventListener('DOMContentLoaded', () => {
    loadUsers();
    updateNaechteBerechnenCheckbox(); // Checkbox initial anzeigen
  });
</script>
