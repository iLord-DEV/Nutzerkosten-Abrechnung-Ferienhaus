    try {
      const response = await fetch('/api/tankfuellungen');
      if (response.ok) {
        alleTankfuellungen = await response.json();
        console.log('‚õΩ Tankf√ºllungen geladen:', alleTankfuellungen.length);
      }
    } catch (error) {
