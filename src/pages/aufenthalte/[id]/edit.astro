  // Kostenvorschau berechnen
  async function calculateCosts() {
    const ankunftInput = document.getElementById('ankunft') as HTMLInputElement;
    const abreiseInput = document.getElementById('abreise') as HTMLInputElement;
    const zaehlerStartInput = document.getElementById('zaehlerStart') as HTMLInputElement;
    const zaehlerEndeInput = document.getElementById('zaehlerEnde') as HTMLInputElement;
    const uebernachtungenMitgliederInput = document.getElementById('uebernachtungenMitglieder') as HTMLInputElement;

    const ankunft = ankunftInput?.value;
    const abreise = abreiseInput?.value;
    const zaehlerStart = parseFloat(zaehlerStartInput?.value || '0');
    const zaehlerEnde = parseFloat(zaehlerEndeInput?.value || '0');
    const uebernachtungenMitglieder = parseInt(uebernachtungenMitgliederInput?.value || '0');

    if (ankunft && abreise && zaehlerStart && zaehlerEnde) {
      // Anzahl N√§chte berechnen
      const anzahlNaechte = Math.ceil((new Date(abreise).getTime() - new Date(ankunft).getTime()) / (1000 * 60 * 60 * 24));

      // Verbrauchte Stunden
      const verbrauchteStunden = zaehlerEnde - zaehlerStart;

      // √ñlkosten berechnen
      const oelKosten = berechneOelkostenNachZaehlerstand(zaehlerStart, zaehlerEnde, alleTankfuellungen);

      // TEMPOR√ÑR VEREINFACHT: √úbernachtungskosten
      // Beg√ºnstigte User zahlen KEINE √úbernachtungskosten (werden nur erfasst f√ºr Statistik)
      // Normale User zahlen immer √úbernachtungskosten
      //
      // Alte Logik (mit Checkbox):
      // const naechteBerechnenCheckbox = document.getElementById('naechteBerechnen') as HTMLInputElement;
      // const istBeguenstigt = isSelectedUserBeguenstigt();
      // const sollenNaechteBerechnetWerden = istBeguenstigt ? naechteBerechnenCheckbox?.checked : true;

      const istBeguenstigt = isSelectedUserBeguenstigt();
      const sollenNaechteBerechnetWerden = !istBeguenstigt; // true wenn NICHT beg√ºnstigt

      const uebernachtungenGaeste = parseInt((document.getElementById('uebernachtungenGaeste') as HTMLInputElement)?.value || '0');
      const uebernachtungKosten = sollenNaechteBerechnetWerden ? (
        uebernachtungenMitglieder * (currentPreise.uebernachtungMitglied || 5) +
        uebernachtungenGaeste * (currentPreise.uebernachtungGast || 10)
      ) : 0;

      const gesamtKosten = oelKosten + uebernachtungKosten;

      // Vorschau anzeigen
      const vorschau = document.getElementById('kosten-vorschau');
      if (vorschau) {
        vorschau.classList.remove('hidden');

        const anzahlNaechteEl = document.getElementById('anzahl-naechte');
        const minMitgliederNaechteEl = document.getElementById('min-mitglieder-naechte');
        const verbrauchteStundenEl = document.getElementById('verbrauchte-stunden');
        const oelKostenEl = document.getElementById('oel-kosten');
        const uebernachtungKostenEl = document.getElementById('uebernachtung-kosten');
        const gesamtKostenEl = document.getElementById('gesamt-kosten');

        if (anzahlNaechteEl) anzahlNaechteEl.textContent = `${anzahlNaechte}`;
        if (minMitgliederNaechteEl) {
          minMitgliederNaechteEl.textContent = `${anzahlNaechte}`;
          // Warnung wenn zu wenige Mitgliedern√§chte
          if (uebernachtungenMitglieder < anzahlNaechte) {
            minMitgliederNaechteEl.classList.add('text-error', 'font-bold');
          } else {
            minMitgliederNaechteEl.classList.remove('text-error', 'font-bold');
          }
        }
        if (verbrauchteStundenEl) verbrauchteStundenEl.textContent = `${verbrauchteStunden.toFixed(1)} h`;
        if (oelKostenEl) oelKostenEl.textContent = `‚Ç¨ ${oelKosten.toFixed(2)}`;
        if (uebernachtungKostenEl) uebernachtungKostenEl.textContent = `‚Ç¨ ${uebernachtungKosten.toFixed(2)}`;
        if (gesamtKostenEl) gesamtKostenEl.textContent = `‚Ç¨ ${gesamtKosten.toFixed(2)}`;
      }
    }
  }

  // Pr√ºfen ob der ausgew√§hlte User beg√ºnstigt ist
  function isSelectedUserBeguenstigt(): boolean {
    // Falls ein User im Dropdown ausgew√§hlt wurde UND users geladen sind
    if (selectedUserId && users.length > 0) {
      const selectedUser = users.find(u => u.id === selectedUserId);
      return selectedUser?.beguenstigt || false;
    }
    // Sonst: Verwende den initialen Wert vom aktuellen Aufenthalt
    return currentAufenthalt.userBeguenstigt;
  }

  // TEMPOR√ÑR DEAKTIVIERT: Checkbox f√ºr "N√§chte berechnen" anzeigen/verstecken
  // Diese Funktion wird aktuell nicht ben√∂tigt, da die Checkbox auskommentiert ist.
  // Beg√ºnstigte User zahlen aktuell KEINE √úbernachtungskosten (immer false).
  /*
  function updateNaechteBerechnenCheckbox() {
    const container = document.getElementById('naechte-berechnen-container');
    const istBeguenstigt = isSelectedUserBeguenstigt();

    console.log('üîç updateNaechteBerechnenCheckbox:', {
      istBeguenstigt,
