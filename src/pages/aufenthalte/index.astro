      }
    } else {
      // Fallback auf Standardwerte
      calcDetailsDiv.innerHTML = `
        <div class="text-xs">
          <div>Verbrauch: 5.5 L/h (Standard)</div>
          <div>Preis: ‚Ç¨1.01/L (Standard)</div>
        </div>
      `;
    }
  }

