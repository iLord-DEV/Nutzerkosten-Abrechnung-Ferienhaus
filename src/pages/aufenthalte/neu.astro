  // Debounced Input-Validierung
  function validateInput(input: HTMLInputElement) {
    const fieldName = input.name;
    const value = input.value;

    // Z√§hlerstand-Validierung (nur grundlegende Validierung bei input)
    if (fieldName === 'zaehlerStart' || fieldName === 'zaehlerEnde') {
      const numValue = parseFloat(value);
      if (!isNaN(numValue)) {
        // Pr√ºfe ob Dezimalzahl eingegeben wurde
        if (numValue % 1 !== 0) {
          showFieldError(input, 'Z√§hlerst√§nde m√ºssen ganze Zahlen sein (z.B. 1350, nicht 1350.5)');
        } else if (numValue < 0) {
          showFieldError(input, 'Z√§hlerstand kann nicht negativ sein');
        } else if (numValue > 100000) {
          showFieldError(input, 'Z√§hlerstand ist unrealistisch hoch (max 100.000)');
        } else {
          clearFieldError(input);
          clearFieldSuggestion(input);
        }
      }
    }

    // Datum-Validierung
    if (fieldName === 'ankunft' || fieldName === 'abreise') {
      const dateValue = new Date(value);
      if (!isNaN(dateValue.getTime())) {
        const heute = new Date();
        heute.setHours(0, 0, 0, 0);
        
        if (fieldName === 'ankunft' && dateValue > heute) {
          showFieldError(input, 'Ankunft kann nicht in der Zukunft liegen');
        } else {
          clearFieldError(input);
        }
      }
    }
  }

