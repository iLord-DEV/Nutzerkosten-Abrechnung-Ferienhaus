        if (oelKostenEl) oelKostenEl.textContent = `‚Ç¨ ${oelKosten.toFixed(2)}`;
        if (uebernachtungKostenEl) uebernachtungKostenEl.textContent = `‚Ç¨ ${uebernachtungKosten.toFixed(2)}`;
        if (gesamtKostenEl) gesamtKostenEl.textContent = `‚Ç¨ ${gesamtKosten.toFixed(2)}`;
      }

      // √úberlappungen pr√ºfen
      checkUeberlappungen(zaehlerStart, zaehlerEnde);
    }
  }

  // √úberlappungen pr√ºfen
  async function checkUeberlappungen(start: number, ende: number) {
    try {
      const response = await fetch('/api/aufenthalte');
      if (response.ok) {
        const aufenthalte = await response.json();
        const selectedUserId = parseInt((document.getElementById('userId') as HTMLSelectElement)?.value || '0');
        
        // Pr√ºfe zuerst, ob der Benutzer bereits einen Aufenthalt mit diesen Z√§hlerst√§nden hat
        const eigeneUeberlappungen = aufenthalte.filter((a: any) => {
          if (a.userId !== selectedUserId) return false;
          
          // √úberlappung pr√ºfen: Z√§hlerst√§nde √ºberschneiden sich
          const overlapStart = Math.max(start, a.zaehlerAnkunft);
          const overlapEnd = Math.min(ende, a.zaehlerAbreise);
          const overlapHours = overlapEnd - overlapStart;
          
          // Nur echte √úberlappungen mit mindestens 0.1 Stunden
          return overlapHours >= 0.1;
        });

        if (eigeneUeberlappungen.length > 0) {
          showEigeneUeberlappungsWarnung(eigeneUeberlappungen);
          return;
        }

        // Dann pr√ºfe √úberlappungen mit anderen Benutzern
        const andereUeberlappungen = aufenthalte.filter((a: any) => {
          if (a.userId === selectedUserId) return false;
          
          // √úberlappung pr√ºfen: Z√§hlerst√§nde √ºberschneiden sich
          const overlapStart = Math.max(start, a.zaehlerAnkunft);
          const overlapEnd = Math.min(ende, a.zaehlerAbreise);
          const overlapHours = overlapEnd - overlapStart;
          
          // Nur echte √úberlappungen mit mindestens 0.1 Stunden
          return overlapHours >= 0.1;
        });

        if (andereUeberlappungen.length > 0) {
          showUeberlappungsWarnung(andereUeberlappungen);
        } else {
          hideUeberlappungsWarnung();
        }
      }
    } catch (error) {
      console.error('Fehler beim Pr√ºfen der √úberlappungen:', error);
    }
  }

