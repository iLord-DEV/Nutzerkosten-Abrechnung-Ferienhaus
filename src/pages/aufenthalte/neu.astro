      const naechteBerechnen = !isSelectedUserBeguenstigt(); // true wenn NICHT beg√ºnstigt

      const uebernachtungKosten = naechteBerechnen ? (
        uebernachtungenMitglieder * (currentPreise.uebernachtungMitglied || 5) +
