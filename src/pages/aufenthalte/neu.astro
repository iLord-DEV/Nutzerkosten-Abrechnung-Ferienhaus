  // Formular absenden
  async function handleSubmit(event: Event) {
    event.preventDefault();
    
    const formData = new FormData(event.target as HTMLFormElement);
    const userId = parseInt(formData.get('userId') as string);
    const ankunft = formData.get('ankunft') as string;
    const abreise = formData.get('abreise') as string;
    const zaehlerStart = parseFloat(formData.get('zaehlerStart') as string);
    const zaehlerEnde = parseFloat(formData.get('zaehlerEnde') as string);
    const uebernachtungenMitglieder = parseInt(formData.get('uebernachtungenMitglieder') as string);
    const uebernachtungenGaeste = parseInt(formData.get('uebernachtungenGaeste') as string);

    // Validierung
    if (!userId || !ankunft || !abreise || !zaehlerStart || !zaehlerEnde) {
      showNotification('Bitte füllen Sie alle Pflichtfelder aus.', 'error');
      return;
    }

    if (zaehlerEnde <= zaehlerStart) {
      showNotification('Der Endzählerstand muss höher als der Startzählerstand sein.', 'error');
      return;
    }

    if (new Date(abreise) <= new Date(ankunft)) {
      showNotification('Das Abreisedatum muss nach dem Ankunftsdatum liegen.', 'error');
      return;
    }

    if (uebernachtungenMitglieder < 1) {
      showNotification('Es muss mindestens eine Übernachtung für Mitglieder angegeben werden.', 'error');
      return;
    }

    // Validierung: Mitglieder-Übernachtungen müssen mindestens der Anzahl der Nächte entsprechen
    const anzahlNaechte = Math.ceil((new Date(abreise).getTime() - new Date(ankunft).getTime()) / (1000 * 60 * 60 * 24));
    if (uebernachtungenMitglieder < anzahlNaechte) {
      showNotification(`Die Übernachtungen für Mitglieder (${uebernachtungenMitglieder}) können nicht weniger als die Anzahl der Nächte (${anzahlNaechte}) betragen, da immer mindestens ein Mitglied anwesend sein muss.`, 'error');
      return;
    }

    // Validierung: Eigene Überlappungen prüfen
    try {
      const response = await fetch('/api/aufenthalte');
      if (response.ok) {
        const aufenthalte = await response.json();
        const eigeneUeberlappungen = aufenthalte.filter((a: any) => {
          if (a.userId !== userId) return false;
          
          // Überlappung prüfen: Zählerstände überschneiden sich
          const overlapStart = Math.max(zaehlerStart, a.zaehlerAnkunft);
          const overlapEnd = Math.min(zaehlerEnde, a.zaehlerAbreise);
          const overlapHours = overlapEnd - overlapStart;
          
          // Nur echte Überlappungen mit mindestens 0.1 Stunden
          return overlapHours >= 0.1;
        });

        if (eigeneUeberlappungen.length > 0) {
          const overlapping = eigeneUeberlappungen[0];
          showNotification(`Sie haben bereits einen Aufenthalt mit diesen Zählerständen (${overlapping.ankunft.split('T')[0]} - ${overlapping.abreise.split('T')[0]}, Zähler ${overlapping.zaehlerAnkunft}-${overlapping.zaehlerAbreise}). Bitte wählen Sie andere Zählerstände.`, 'error');
          return;
        }
      }
    } catch (error) {
      console.error('Fehler beim Prüfen der eigenen Überlappungen:', error);
    }

    // Benutzer-Name für die API finden (für Admins)
    const selectedUser = users.find(u => u.id === userId);
    const personName = selectedUser ? selectedUser.name : null;

    // Daten für die API vorbereiten
    const aufenthaltData = {
      userId: userId,
      personName: personName, // Für Admin-API
      ankunft: ankunft, // Datum als String senden, nicht als ISO
      abreise: abreise, // Datum als String senden, nicht als ISO
      zaehlerStart: zaehlerStart,
      zaehlerEnde: zaehlerEnde,
      uebernachtungenMitglieder: uebernachtungenMitglieder,
      uebernachtungenGaeste: uebernachtungenGaeste,
      jahr: new Date(ankunft).getFullYear()
    };
    
    try {
      const response = await fetch('/api/aufenthalte', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(aufenthaltData),
      });
      
      if (response.ok) {
        const result = await response.json();
        clearAllCaches(); // Alle Caches leeren nach erfolgreichem Speichern
        showNotification('Aufenthalt erfolgreich gespeichert! Sie werden weitergeleitet...', 'success');
        // Weiterleitung erfolgt automatisch nach 2 Sekunden in showNotification
      } else {
        const error = await response.json();
        showNotification(`Fehler: ${error.error || 'Unbekannter Fehler'}`, 'error');
      }
    } catch (error) {
      console.error('Fehler beim Speichern:', error);
      showNotification('Ein Fehler ist aufgetreten. Bitte versuchen Sie es erneut.', 'error');
    }
  }

  // Event-Listener
  document.addEventListener('DOMContentLoaded', async () => {
    await loadUsers();
    await loadPreise();
    
    // Aktuelles Datum setzen
    const now = new Date();
    const localDate = now.toISOString().slice(0, 10);
    
    const ankunftInput = document.getElementById('ankunft') as HTMLInputElement;
    const abreiseInput = document.getElementById('abreise') as HTMLInputElement;
    
    if (ankunftInput) ankunftInput.value = localDate;
    if (abreiseInput) abreiseInput.value = localDate;
    
    // Event-Listener für Formularfelder
    const form = document.getElementById('aufenthalt-form');
    if (form) {
      const inputs = form.querySelectorAll('input');
      inputs.forEach(input => {
        // Debounced Validierung (300ms delay)
        let validationTimeout: NodeJS.Timeout;
        input.addEventListener('input', () => {
          clearTimeout(validationTimeout);
          validationTimeout = setTimeout(() => {
            calculateCosts();
            validateInput(input);
          }, 300);
        });
      });
      
      // Formular-Submit-Handler
      form.addEventListener('submit', handleSubmit);
    }
  });
