<script>
  // Benutzerinfo laden und Seite personalisieren
  async function loadUserInfo() {
    try {
      const response = await fetch('/api/auth/me');
      if (response.ok) {
        const user = await response.json();
        
        // 1. Begr√º√üung mit Vornamen personalisieren
        updateWelcomeMessage(user);
        
        // 2. Schnellaktionen je nach Rolle anpassen
        updateQuickActions(user);
        
        // 3. Tankf√ºllungen-Kachel nur f√ºr Admins anzeigen
        updateTankfuellungenCard(user);
        
        // 4. Dashboard-Daten laden
        loadDashboardData(user);
      }
    } catch (error) {
      // Nicht eingeloggt oder Fehler - normale Anzeige beibehalten
    }
  }
  
  // Willkommensnachricht personalisieren
  function updateWelcomeMessage(user) {
    const welcomeTitle = document.getElementById('welcome-title');
    if (welcomeTitle && user.name) {
      // Vorname extrahieren (erster Teil vor dem Leerzeichen)
      const firstName = user.name.split(' ')[0];
      welcomeTitle.textContent = `Willkommen ${firstName}!`;
    }
  }
  
  // Schnellaktionen je nach Benutzerrolle anpassen
  function updateQuickActions(user) {
    const quickActions = document.getElementById('quick-actions');
    
    if (quickActions && user.role === 'ADMIN') {
      // Admin sieht auch den Tankf√ºllungen-Button
      const tankfuellungButton = `
        <a href="/tankfuellungen/neu" class="relative rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 dark:hover:border-gray-500 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
              <span class="text-white text-sm font-medium">‚õΩ</span>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <span class="absolute inset-0" aria-hidden="true"></span>
            <p class="text-sm font-medium text-gray-900 dark:text-white">
              Tankf√ºllung eintragen
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              Neue Tankf√ºllung erfassen
            </p>
          </div>
        </a>
      `;
      
      // Tankf√ºllungen-Button zwischen Aufenthalte und Statistiken einf√ºgen
      const statistikButton = quickActions.querySelector('a[href="/statistiken"]');
      if (statistikButton) {
        statistikButton.insertAdjacentHTML('beforebegin', tankfuellungButton);
      }
    }
  }
  
  // Tankf√ºllungen-Kachel nur f√ºr Admins anzeigen
  function updateTankfuellungenCard(user) {
    const tankfuellungenCard = document.getElementById('tankfuellungen-card');
    if (tankfuellungenCard) {
      if (user.role === 'ADMIN') {
        tankfuellungenCard.classList.remove('hidden');
      } else {
        tankfuellungenCard.classList.add('hidden');
      }
    }
  }
  
  // Dashboard-Daten laden
  async function loadDashboardData(user) {
    try {
      // Tankf√ºllungen f√ºr aktuelles Jahr laden (nur f√ºr Admins)
      if (user.role === 'ADMIN') {
        const tankResponse = await fetch('/api/tankfuellungen');
        if (tankResponse.ok) {
          const tankfuellungen = await tankResponse.json();
          const currentYear = new Date().getFullYear();
          const tankfuellungenThisYear = tankfuellungen.filter(tank => 
            new Date(tank.datum).getFullYear() === currentYear
          );
          
          const tankCountElement = document.getElementById('tankfuellungen-count');
          if (tankCountElement) {
            tankCountElement.textContent = tankfuellungenThisYear.length;
          }
        }
      }
    } catch (error) {
      console.error('Fehler beim Laden der Dashboard-Daten:', error);
    }
  }

  // Script beim Laden der Seite ausf√ºhren
  document.addEventListener('DOMContentLoaded', loadUserInfo);
</script>
