---
import ProtectedLayout from '../../../layouts/ProtectedLayout.astro';
import { getUser } from '../../../utils/auth';

// Zugriffskontrolle: Nur Admins
const user = await getUser(Astro);
if (!user) {
  return Astro.redirect('/login');
}
if (user.role !== 'ADMIN') {
  return Astro.redirect('/dashboard');
}

const { id } = Astro.params;

// Tankf√ºllung laden
let tankfuellung = null;
try {
  const { PrismaClient } = await import('@prisma/client');
  const prisma = new PrismaClient();
  
  tankfuellung = await prisma.tankfuellung.findUnique({
    where: { id: parseInt(id!) },
    include: {
      zaehler: {
        select: {
          id: true,
          einbauDatum: true,
        },
      },
    },
  });
  
  await prisma.$disconnect();
} catch (error) {
  console.error('Fehler beim Laden der Tankf√ºllung:', error);
  return Astro.redirect('/tankfuellungen');
}

if (!tankfuellung) {
  return Astro.redirect('/tankfuellungen');
}
---

<ProtectedLayout title="Tankf√ºllung bearbeiten - Nutzerkosten">
  <div class="section-container">
    <div class="page-header">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="page-title">
            Tankf√ºllung bearbeiten
          </h1>
          <p class="page-description">
            Bearbeiten Sie die Details der Tankf√ºllung
          </p>
        </div>
        <a href="/tankfuellungen" class="btn btn-ghost">
          ‚Üê Zur√ºck zur √úbersicht
        </a>
      </div>
    </div>

    <div class="max-w-2xl">
      <div class="card-container">
        <form id="edit-form" class="space-y-6">
            <input type="hidden" id="tankfuellung-id" value={tankfuellung.id}>
            
            <!-- Datum -->
            <div class="form-control">
              <label for="datum" class="label">
                <span class="label-text">Datum</span>
              </label>
              <input type="date" id="datum" required
                     value={new Date(tankfuellung.datum).toISOString().split('T')[0]}
                     class="input input-bordered w-full">
            </div>

            <!-- Z√§hlerstand -->
            <div class="form-control">
              <label for="zaehlerstand" class="label">
                <span class="label-text">Z√§hlerstand (Stunden)</span>
              </label>
              <input type="number" id="zaehlerstand" step="0.1" required
                     value={tankfuellung.zaehlerstand}
                     class="input input-bordered w-full">
              <label class="label">
                <span class="label-text-alt">Aktueller Z√§hler: #{tankfuellung.zaehler?.id} (eingebaut: {tankfuellung.zaehler ? new Date(tankfuellung.zaehler.einbauDatum).toLocaleDateString('de-DE') : 'Unbekannt'})</span>
              </label>
            </div>

            <!-- Liter -->
            <div class="form-control">
              <label for="liter" class="label">
                <span class="label-text">Getankte Liter</span>
              </label>
              <input type="number" id="liter" step="0.1" required
                     value={tankfuellung.liter}
                     class="input input-bordered w-full">
            </div>

            <!-- Preis pro Liter -->
            <div class="form-control">
              <label for="preisProLiter" class="label">
                <span class="label-text">Preis pro Liter (‚Ç¨)</span>
              </label>
              <input type="number" id="preisProLiter" step="0.01" required
                     value={tankfuellung.preisProLiter}
                     class="input input-bordered w-full">
            </div>

            <!-- Notizen -->
            <div class="form-control">
              <label for="notizen" class="label">
                <span class="label-text">Notizen (optional)</span>
              </label>
              <textarea id="notizen" rows="3"
                        class="textarea textarea-bordered w-full"
                        placeholder="Zus√§tzliche Informationen...">{tankfuellung.notizen || ''}</textarea>
            </div>

            <div class="flex justify-end space-x-3">
              <a href="/tankfuellungen" class="btn btn-ghost">
                Abbrechen
              </a>
              <button type="submit" class="btn btn-primary">
                Speichern
              </button>
            </div>

            <!-- Benachrichtigungs-Bereich -->
            <div id="notification" class="hidden mt-4 p-4 rounded-md">
              <div class="flex">
                <div class="flex-shrink-0">
                  <span id="notification-icon" class="text-lg"></span>
                </div>
                <div class="ml-3">
                  <p id="notification-message" class="text-sm font-medium"></p>
                </div>
              </div>
            </div>
          </form>
      </div>
    </div>
  </div>
</ProtectedLayout>

<script>
  // Benachrichtigung anzeigen
  function showNotification(message: string, type: 'success' | 'error' | 'info' = 'info') {
    const notification = document.getElementById('notification');
    const notificationMessage = document.getElementById('notification-message');
    const notificationIcon = document.getElementById('notification-icon');

    if (!notification || !notificationMessage || !notificationIcon) return;

    // Nachricht setzen
    notificationMessage.textContent = message;

    // Icon und Farbe je nach Typ setzen
    let icon = '';
    let bgColor = '';
    let textColor = '';

    switch (type) {
      case 'success':
        icon = '‚úÖ';
        bgColor = 'bg-green-50 dark:bg-green-900/20';
        textColor = 'text-green-800 dark:text-green-200';
        break;
      case 'error':
        icon = '‚ùå';
        bgColor = 'bg-red-50 dark:bg-red-900/20';
        textColor = 'text-red-800 dark:text-red-200';
        break;
      case 'info':
      default:
        icon = '‚ÑπÔ∏è';
        bgColor = 'bg-blue-50 dark:bg-blue-900/20';
        textColor = 'text-blue-800 dark:text-blue-200';
        break;
    }

    notificationIcon.textContent = icon;
    notification.className = `mt-4 p-4 rounded-md ${bgColor}`;
    notificationMessage.className = `text-sm font-medium ${textColor}`;

    // Benachrichtigung anzeigen
    notification.classList.remove('hidden');

    // Bei Erfolg nach 2 Sekunden weiterleiten
    if (type === 'success') {
      setTimeout(() => {
        window.location.href = '/tankfuellungen';
      }, 2000);
    }
  }

  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('edit-form') as HTMLFormElement;

    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      const tankfuellungId = document.getElementById('tankfuellung-id')?.getAttribute('value');

      const data = {
        datum: (document.getElementById('datum') as HTMLInputElement).value,
        zaehlerstand: parseFloat((document.getElementById('zaehlerstand') as HTMLInputElement).value),
        liter: parseFloat((document.getElementById('liter') as HTMLInputElement).value),
        preisProLiter: parseFloat((document.getElementById('preisProLiter') as HTMLInputElement).value),
        notizen: (document.getElementById('notizen') as HTMLTextAreaElement).value || null,
      };

      console.log('üöÄ Sende Daten an API:', data);

      try {
        const response = await (window as any).csrfFetch(`/api/tankfuellungen/${tankfuellungId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        console.log('üì° API Response Status:', response.status);

        if (response.ok) {
          const result = await response.json();
          console.log('‚úÖ API Response:', result);
          showNotification('Tankf√ºllung erfolgreich aktualisiert! Sie werden weitergeleitet...', 'success');
        } else {
          const error = await response.json();
          console.error('‚ùå API Fehler:', error);
          showNotification(`Fehler beim Aktualisieren: ${error.error || 'Unbekannter Fehler'}`, 'error');
        }
      } catch (error) {
        console.error('‚ùå Fehler beim Aktualisieren der Tankf√ºllung:', error);
        showNotification('Ein Fehler ist aufgetreten. Bitte versuchen Sie es erneut.', 'error');
      }
    });
  });
</script>
