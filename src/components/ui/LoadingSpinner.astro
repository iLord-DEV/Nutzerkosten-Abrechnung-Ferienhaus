---
/**
 * Wiederverwendbare Loading Spinner-Komponente mit DaisyUI
 *
 * Props:
 * - size: 'xs' | 'sm' | 'md' | 'lg'
 * - variant: 'spinner' | 'dots' | 'ring' | 'ball' | 'bars'
 * - color: 'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error'
 * - centered: boolean - Zentriert den Spinner
 */

interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg';
  variant?: 'spinner' | 'dots' | 'ring' | 'ball' | 'bars';
  color?: 'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error';
  centered?: boolean;
  class?: string;
}

const {
  size = 'md',
  variant = 'spinner',
  color = 'primary',
  centered = false,
  class: className = '',
} = Astro.props;

const sizeClasses = {
  xs: 'loading-xs',
  sm: 'loading-sm',
  md: 'loading-md',
  lg: 'loading-lg',
};

const variantClasses = {
  spinner: 'loading-spinner',
  dots: 'loading-dots',
  ring: 'loading-ring',
  ball: 'loading-ball',
  bars: 'loading-bars',
};

const colorClasses = {
  primary: 'text-primary',
  secondary: 'text-secondary',
  accent: 'text-accent',
  neutral: 'text-neutral',
  info: 'text-info',
  success: 'text-success',
  warning: 'text-warning',
  error: 'text-error',
};

const classes = [
  'loading',
  variantClasses[variant],
  sizeClasses[size],
  colorClasses[color],
  className,
]
  .filter(Boolean)
  .join(' ');

const WrapperTag = centered ? 'div' : Fragment;
const wrapperClasses = centered ? 'flex justify-center items-center min-h-[200px]' : '';
---

{centered ? (
  <div class={wrapperClasses}>
    <span class={classes}></span>
  </div>
) : (
  <span class={classes}></span>
)}
